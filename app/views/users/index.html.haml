-#Отображение названия статьи в заголовке страницы
- content_for :title do
  Universary
  \|
  Users

%h3
  .text-center
    Users
    .badge.badge-info
      = @users.count
%p
-#.card-columns
-#  - @users.each do |user|
-#    = render 'users/user', user: user

-#Форма поиска для gem ransack
= search_form_for @q do |f|
  / метод _cont для строк  -  "содержит"
  = f.search_field :email_cont, placeholder: "Email"
  / метод _eq для чисел - "равен"
  -# = f.search_field :sign_in_count_eq, placeholder: "sign_in_count"
  -# = f.search_field :email_or_sign_in_count_cont, placeholder: "email or sign_in_count"
  = f.submit
  -#.кнопка обновления, сделаная как редирект на общую  страницу
  = link_to '', users_path, class: 'btn btn-sm fa fa-sync'

%br
!= pagy_bootstrap_nav(@pagy)
.table-responsive
  %table.table.table-bordered.table-sm
    %thead
      %tr
        %th id
        %th= sort_link(@q, :email)
        %th= sort_link(@q, :created_at)
        %th= sort_link(@q, :sign_in_count)
        %th= "current_sign_in".humanize
        %th= "last_sign_in_at".humanize
        %th= "current_sign_in_ip".humanize
        %th= "last_sign_in_ip".humanize
        %th Confirmed?
        %th Roles

    %tbody
      - @users.each do |user|
        %tr
          %td= user.id
          %td
            - if user.online?
              .text-success.fa.fa-circle
            - else
              .text-danger.fa.fa-circle
            = link_to user.email, user_path(user)
          %td= user.created_at
          %td= user.sign_in_count
          %td= user.current_sign_in_at
          %td= user.last_sign_in_at
          %td= user.current_sign_in_ip
          %td= user.last_sign_in_ip
          %td
            - if user.confirmed_at.present?
              .badge.badge-success Yes
            - else
              .badge.badge-danger No
          %td
            - user.roles.each do |role|
              .badge.badge-info
                = role.name
            - if policy(user).edit?
              = link_to "Edit roles", edit_user_path(user), class: 'btn btn-warning'
  != pagy_bootstrap_nav(@pagy)
  %br
